<h1>Edit Info:</h1>
<form action="/Details/Details/@(Model.DetailId)" method="post">
  <label for="description">Description</label>
  <input id="description" description="description" type="text" value="@(Model.Description)">
  <br>
  <label for="address">Physical Address</label>
  <input id="address" name="address" type="text" value="@(Model.Address)">
  <br>
  <label for="rating">Rating</label>
  <input id="rating" name="rating" type="number" value="@(Model.Rating)">
  <br>
  <button type="submit">Submit Changes</button>
</form>

<a href="/Details/Details/@(Model.DetailId)"><p>Return to Entry Details</p></a>